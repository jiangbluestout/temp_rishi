<section
  class=""
>
  <div
    class="section-p-x section-p-b medium"
    x-data="{ fadeIn: false }"
    x-intersect.threshold.10="fadeIn = true"
    :class="fadeIn ? 'animate-fade-in' : 'opacity-0'"
  >
    <div class="relative flex gap-y-12 {% if data.flip_orientation %} flex-col md:flex-row-reverse {% else %} flex-col-reverse md:flex-row {% endif %} {% if data.max_width == 'Container' or data.max_width == blank %} section-container tight{% endif %} {% if data.align_items_center == true %}items-center{% endif %}">
      {% if data.image != blank %}
        <div class="md:w-1/2 h-fit {% if data.flip_orientation %} md:pl-[15vw] {% else %} md:pr-[15vw] {% endif%}">
          {% render 'image',
            image_desktop: data.image,
            image_mobile: data.image,
            width_desktop: '1000x',
            width_mobile: '800x',
            ratio_desktop: '125%',
            ratio_mobile: '125%',
            lazy: true,
            image_classes: 'rounded-4'
          %}
          {% if data.image_caption != blank %}
            <div class="para-md md:para-sm md:leading-1.3 2xl:para-md pt-2.5 opacity-80">
              {{ data.image_caption | metafield_tag }}
            </div>
          {% endif %}
        </div>
      {% endif %}
      {% if data.text != blank %}
        <div class="md:w-1/2 whitespace-pre-wrap rte article">{{ data.text | metafield_tag }}</div>
      {% endif %}
    </div>
  </div>
</section>
