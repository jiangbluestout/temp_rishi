<div
  class="sub-menu-new flex flex-col h-full"
  x-show="menu == '{{ link_handle }}'"
  x-transition.opacity.duration.200ms
>
  <div class="flex-1 flex flex-col justify-between gap-5 h-full">
    <div class="mb-10">
      {% for l1_link in links %}
        <div class="border-b border-b-brown border-opacity-25 pt-3 pb-4 px-3 w-full">
          <a
            class="font-serif text-5xl tracking-4pc font-100 flex justify-between items-center w-full"
            href="{{ l1_link.url }}"
          >
            {{ l1_link.title }}
          </a>
        </div>
      {% endfor %}
    </div>

    <div class="flex flex-col justify-between gap-11">
      <div>
        <div class="tracking-4pc text-dark text-opacity-40 mb-4 text-base">
          {{ section.settings.discover_heading_left }}
        </div>

        <div>
          {% for block in section.blocks %}
            {% render 'header__nav-article-card', article: block.settings.article, blog_title: block.settings.blog_title, optional_url: block.settings.url %}
          {% endfor %}
        </div>
      </div>

      {% if section.settings.discover_article %}
        <div class="pb-safari">
          <div class="inline-block text-left">
            <div class="tracking-4pc text-dark text-opacity-40 mb-4 text-base">
              {{ section.settings.discover_heading_right }}
            </div>

            {% render 'header__nav-article-card', article: section.settings.discover_article, blog_title: section.settings.discover_blog_title, optional_url: section.settings.discover_url %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
