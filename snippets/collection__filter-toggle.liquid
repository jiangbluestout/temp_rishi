<div class="relative w-50">
  <div class="flex gap-2 items-center">
    <button
      type="button"
      aria-controls="filter-panel"
      :aria-expanded="filtersOpen"
      x-ref="filtersButton"
      @click="toggleFilterPanel"
      class="flex items-center para-sm leading-none px-3 py-1.5 transition-all duration-200 rounded-49"
      :class="{'bg-dark text-white': filtersOpen }"
    >
      Filters<span class="pl-1" x-text="'(' + filterCount + ')'" x-show="filterCount > 0"></span>
      <div class="transform transition-all duration-150 ml-2" :class="{ 'rotate-180': filtersOpen }">
        {% render 'svg__chevron-down', class: 'text-brown' %}
      </div>
    </button>
    <button x-show="filterCount > 0" x-transition @click.prevent="handleClearFilters" class="flex items-center para-sm leading-none px-3 py-1.5 transition-all duration-200 rounded-49 bg-light">Clear</button>
  </div>
</div>
