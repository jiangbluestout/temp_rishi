<section class="section-p-x pb-5 lg:pb-35">
  <div class="grid lg:grid-cols-3">
    <div class="w-full pr-10 2xl:pr-0 2xl:w-3/4">
      <h1 class="heading-2xl">{{ section.settings.heading | newline_to_br }}</h1>
      <div class="pt-5 md:pt-6 opacity-80 para-sm pb-12 lg:pb-0">
        {{ section.settings.copy }}
      </div>
    </div>
    <div class="lg:col-span-2 bg-light rounded-4 overflow-hidden flex flex-col lg:flex-row group">
      {% for block in section.blocks %}
        {% if block.settings.image %}
          <div class="w-full lg:w-[55%]">
            {% render 'image',
              image_desktop: block.settings.image,
              width_desktop: '800x',
              width_mobile: '500x',
              ratio_desktop: '100%',
              ratio_mobile: '100%',
              lazy: true,
              image_classes: 'group-hover:scale-102 transition-transform duration-500 ease-in-out'
            %}
          </div>
        {% endif %}
        <div class="lg:w-[45%] pt-5 px-5 lg:px-8 pb-6 lg:pb-8 flex flex-col justify-between">
          <div>
            {% if block.settings.date %}
              <span class="para-2xs pb-6 block pt-5 opacity-75">{{ block.settings.date }}</span>
            {% endif %}
            {% if block.settings.title %}
              <h5 class="font-100 text-3xl leading-1.2 tracking-1pc md:text-5xl lg:text-[40px] pb-8 lg:pb-12 font-serif">{{ block.settings.title }}</h5>
            {% endif %}
          </div>
          {% if block.settings.logo %}
            <div class="lg:max-w-[65%]">
              <img class="" src="{{ block.settings.logo | img_url: '400x' }}" alt="{{ block.settings.logo.alt }}">
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

</section>

{% schema %}
{
  "name": "Press Hero",
  "class": "section-press-hero",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "copy",
      "label": "Copy"
    }
  ],
  "blocks": [
    {
      "name": "Press Item",
      "type": "press_item",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "1.1.2023"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Press Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press Hero"
    }
  ]
}
{% endschema %}