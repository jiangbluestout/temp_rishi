<div class="custom-hello-bar-section" style="background-color: {{ section.settings.background_color }}; padding: {{ section.settings.padding }}px; margin: {{ section.settings.margin }}px;">
  <div class="custom-hello-bar-section__inner">
    <div class="desktop-text" style="display: none;">{{ section.settings.desktop_text }}</div>
    <div class="mobile-text" style="display: none;">{{ section.settings.mobile_text }}</div>
    <button class="close-section">
      <svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 13 14" width="13" height="14"><style>.a{opacity:.5;fill:#f7f5f0}</style><path class="a" d="m0.3 2l1.4-1.4 11.3 11.3-1.4 1.5zm11.3-1.5l1.4 1.5-11.3 11.3-1.4-1.4z"/></svg>
    </button>
  </div>
</div>

<style>
  @media only screen and (min-width: 768px) {
  .desktop-text {
    display: block !important;
  }
}

@media only screen and (max-width: 767px) {
  .mobile-text {
    display: block !important;
  }
}

  .custom-hello-bar-section__inner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
    text-align: center;
}

header.header {
    margin-top: 35px;
}

.custom-hello-bar-section p{
    font-size: 14px;
    color: #ffffff;
}

button.close-section {
    position: absolute;
    right: 20px;
    
}

.custom-hello-bar-section__inner .mobile-text {
    text-align: center;
}

@media only screen and (max-width: 767px) {
  button.close-section {
    display: none;
}
    .custom-hello-bar-section p{
    font-size: 12px;
    color: #ffffff;
}
}
  
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  document.querySelector('.close-section').addEventListener('click', function() {
    document.querySelector('.custom-hello-bar-section').style.display = 'none';
  });
});
document.querySelector('.close-section').addEventListener('click', function() {
        document.querySelector('header.header').style.marginTop = '0';
    });
</script>


{% schema %}
{
  "name": "Custom Hello Bar",
  "settings": [
    {
      "type": "richtext",
      "id": "desktop_text",
      "label": "Desktop Text",
      "default": "<p>Your default desktop text here</p>"
    },
    {
      "type": "richtext",
      "id": "mobile_text",
      "label": "Mobile Text",
      "default": "<p>Your default mobile text here</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin",
      "label": "Margin",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 10,
      "unit": "px"
    }
  ],
    "presets": [
      {
        "name": "Custom Hello Bar",
        "category": "Components"
      }
    ]
}
{% endschema %}

